<mujoco model="pushing2d">

    <compiler inertiafromgeom="true" angle="radian" coordinate="local" />
    <option timestep="0.01" gravity="0 0 -9.81" iterations="20" integrator="Euler" />
    <default>
        <joint limited="false" damping="1" />
        <geom contype="1" conaffinity="1" condim="1" friction=".5 .1 .1" density="1000" margin="0.002" />
    </default>

    <worldbody>
        <body name="particle" pos="0 0 0">
            <geom name="particle_geom" type="capsule" fromto="-0.01 0 0 0.01 0 0" size="0.05" rgba="0.9 0 0.1 0.6" />
            <site name="particle_site" pos="0 0 0" size="0.01" />
            <joint name="ball_x" type="slide" pos="0 0 0" axis="1 0 0" />
            <joint name="ball_y" type="slide" pos="0 0 0" axis="0 1 0" />
        </body>


        <body name="container" pos="0  0  -0.05">

            <body name="border_front" pos="0 -1  0">
                 <geom type="box" size="1 .01 .1" rgba="0 .1 .9 .3"/>
            </body>

            <body name="border_rear" pos="0 1  0">
                 <geom type="box" size="1 .01 .1" rgba="0 .1 .9 .3"/>
            </body>

            <body name="border_right" pos="1 0  0">
                 <geom type="box" size=".01  1 .1" rgba="0 .1 .9 .3"/>
            </body>

            <body name="border_left" pos="-1 0  0">
                 <geom type="box" size=".01  1 .1" rgba="0 .1 .9 .3"/>
            </body>

            <body name="table" pos="0 0 -.01">
                 <geom type="box" size="1  1 .01" rgba="0 .9 0 1"/>
            </body>
        </body>

